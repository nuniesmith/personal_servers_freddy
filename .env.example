# =============================================================================
# FREDDY Server Environment Variables
# Copy this file to .env and fill in your actual values
# =============================================================================

# Timezone
TZ=America/Toronto

# User/Group IDs (run `id` command to get your values)
PUID=1000
PGID=1000

# =============================================================================
# PHOTOPRISM
# =============================================================================
PHOTOPRISM_ADMIN_PASSWORD=changeme
PHOTOPRISM_DB_NAME=photoprism
PHOTOPRISM_DB_USER=photoprism
PHOTOPRISM_DB_PASSWORD=changeme

# =============================================================================
# NEXTCLOUD
# =============================================================================
NEXTCLOUD_DB_NAME=nextcloud
NEXTCLOUD_DB_USER=nextcloud
NEXTCLOUD_DB_PASSWORD=changeme

# =============================================================================
# AUDIOBOOKSHELF
# =============================================================================
MEDIA_PATH_AUDIOBOOKS=/media/audiobooks
MEDIA_PATH_AUDIOBOOKS_CONFIG=./services/audiobookshelf/config
MEDIA_PATH_AUDIOBOOKS_METADATA=./services/audiobookshelf/metadata

# =============================================================================
# AUTHENTIK SSO
# =============================================================================
# Generate with: openssl rand -hex 32
AUTHENTIK_SECRET_KEY=changeme_generate_with_openssl_rand_hex_32
AUTHENTIK_POSTGRES_PASSWORD=changeme_secure_password

# Email Configuration (for Authentik notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_FROM=your-email@example.com
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-app-specific-password

# Authentik Error Reporting (optional - leave empty to disable)
AUTHENTIK_ERROR_REPORTING__ENABLED=false
