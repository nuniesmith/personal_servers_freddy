[Unit]
Description=Weekly Docker Cache Cleanup Timer for FREDDY
Documentation=https://github.com/nuniesmith/personal_servers_freddy
Requires=docker-cleanup.service

[Timer]
# Run every Sunday at 2:00 AM
OnCalendar=Sun *-*-* 02:00:00
# If the system was off during the scheduled time, run on next boot
Persistent=true
# Randomize start time by up to 1 hour to avoid conflicts
RandomizedDelaySec=3600

[Install]
WantedBy=timers.target
